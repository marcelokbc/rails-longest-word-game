<div class="container">
  <div class="title">
    <h1>New Game</h1>
    <h2> <%= @letters %> </h2>
    <p style="margin-top: 20px;">What is the longest word you can</p>
  </div>
  <div class="row">
    <div>

        <form action="/score" method="POST">
          <input type="text"  name="answer" placeholder="Digite aqui!">
          <input class="btn btn-dark" type="submit" value="Play">
          <input type="hidden" name="letters" value="<%=@letters%>">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        </form>

    </div>
   </div>
</div>


